{
  "name": "auction-backend",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=development node index.js",
    "start:debug": "NODE_ENV=development nodemon --inspect index.js",
    "start:watch": "NODE_ENV=development nodemon",
    "prestart:prod": "tsc",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.3",
    "@nestjs/core": "^6.5.3",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/microservices": "^6.5.3",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.6.7",
    "@nestjs/platform-socket.io": "^6.7.2",
    "@nestjs/typeorm": "^6.1.3",
    "@nestjs/websockets": "^6.7.2",
    "bcryptjs": "^2.4.3",
    "chalk": "^2.4.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "crypto": "^1.0.1",
    "crypto-js": "^3.1.9-1",
    "helmet": "^3.21.0",
    "moment": "^2.24.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.3.0",
    "nodemon": "^1.19.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.0",
    "pretty-error": "^2.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.4.0",
    "sharp": "^0.23.0",
    "typeorm": "^0.2.18",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/chalk": "^2.2.0",
    "@types/express": "4.16.1",
    "@types/helmet": "0.0.44",
    "@types/jest": "24.0.11",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/multer": "^1.3.9",
    "@types/node": "^11.13.4",
    "@types/nodemailer": "^6.2.1",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.2",
    "@types/passport-local": "^1.0.33",
    "@types/sharp": "^0.22.2",
    "@types/socket.io": "^2.1.3",
    "@types/supertest": "2.0.7",
    "@types/uuid": "^3.4.5",
    "@types/winston": "^2.4.4",
    "jest": "24.7.1",
    "nodemailer-mock": "^1.4.3",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "^8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
